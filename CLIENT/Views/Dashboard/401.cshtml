@{
    ViewData["Title"] = "401";
    Layout = "_LayoutError";
}

<div class="content-wrapper d-flex align-items-center text-center error-page bg-primary">
    <div class="row flex-grow">
        <div class="col-lg-7 mx-auto text-white">
            <div class="row align-items-center d-flex flex-row">
                <div class="col-lg-6 text-lg-right pr-lg-4">
                    <h1 class="display-1 mb-0">401</h1>
                </div>
                <div class="col-lg-6 error-page-divider text-lg-left pl-lg-4">
                    <h2>SORRY!</h2>
                    <h3 class="font-weight-light">Unauthorized.</h3>
                </div>
            </div>
            <div class="row mt-5">
                <div class="col-12 text-center mt-xl-2">
                    <span id="time">5</span>
                </div>
            </div>
            <div class="row mt-5">
                <div class="col-12 mt-xl-2">
                    <p class="text-white font-weight-medium text-center">Copyright &copy; 2021  All rights reserved.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    var seconds = 5;

    window.onload = function () {
        var timer = setInterval(function () {
            if (seconds <= 0) {
                document.getElementById("time").innerHTML = 0;
                clearInterval(timer);
            } else {
                document.getElementById("time").innerHTML = seconds - 1;
            }
            seconds -= 1;
        }, 1000);

        setTimeout(function () {
            window.location.href = '/account/login';
        }, seconds * 1000);
    };
</script>