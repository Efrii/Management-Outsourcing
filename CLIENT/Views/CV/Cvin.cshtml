@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "CV IN Company";
    Layout = "_LayoutAdmin";
}

<div class="row">
    <div class="col-md-12 grid-margin">
        <div class="row">
            <div class="col-12 col-xl-8 mb-4 mb-xl-0">
                <h3 class="font-weight-bold">Data Cv Masuk</h3>
                <h6 class="font-weight-normal mb-0">Data Cv berisi cv-cv employe yang mendaftar pekerjaan <span class="text-primary">di perusahan client</span></h6>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Data CV</h4>
        <div class="table-responsive">
            <table class="display expandable-table dataTable no-footer" style="width: 100%;" id="TableCV">
                <thead>
                    <tr>
                        <th>
                            No
                        </th>
                        <th>
                            Nama
                        </th>
                        <th>
                            Pekerjaan
                        </th>
                        <th>
                            CV
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>

                </tbody>
            </table>
        </div>
    </div>
</div>

<div id="modaladd">

</div>

<div class="modal fade" id="ModalSendInterview" tabindex="-1" role="dialog" aria-labelledby="ModalSendEmail" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
            <h5 class="modal-title" id="ModalSendEmail">Kirim Jadwal Interview</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form class="needs-validation" novalidate>
                @Html.AntiForgeryToken()
                <input type="text" class="form-control" id="id_company" name="id_company" value="@Context.Session.GetString("Id")" hidden disabled required>
                <div class="modal-body" id="modal">

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Batal</button>
                    <button type="submit" id="submit" class="btn btn-primary">Kirim</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/CV/cvin.js" asp-append-version="true"></script>
}