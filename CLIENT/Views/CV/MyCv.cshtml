@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "CV ";
    Layout = "_LayoutAdmin";
}

<div class="row">
    <div class="col-md-12 grid-margin">
        <div class="row">
            <div class="col-12 col-xl-8 mb-4 mb-xl-0">
                <h3 class="font-weight-bold">CV Kamu</h3>
                <h6 class="font-weight-normal mb-0">Data CV berisi cv employee yang akan <span class="text-primary"> telah mengupload dan akan diserahkan ke client</span></h6>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-8">
        <div class="card">
            <div class="row">
                <div class="card-body">
                    <div class="text-center">
                        <h3>CV Kamu</h3>
                    </div>
                    <hr>
                    <input type="text" class="form-control" name="id_employees" id="id_employees" required value="@Context.Session.GetString("Id")" hidden disabled>
                    <div id="image">

                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-4">
        <div class="card">
            <div class="row">
                <div class="card-body">
                    <div id="PostCVV">
                        <div class="text-center">
                            <p>Tambah Data Cv</p>
                        </div>
                        <form class="needs-validation-post" novalidate method="POST" id="PostCV" enctype="multipart/form-data">
                            @Html.AntiForgeryToken()
                            <div class="modal-body">
                                <div class="form-group">
                                    <div class="col mb-3">
                                        <select class="form-control" id="id_employee" name="id_employee" hidden required>
                                            <option value="@Context.Session.GetString("Id")"></option>
                                        </select>
                                        <div class="invalid-feedback">
                                            Kelas Wajib Diisi
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col mb-3">
                                        <label for="id_class">Pilih Perusahaan</label>
                                        <select class="form-control" id="id_company" name="id_company" required>
                                        </select>
                                        <div class="invalid-feedback">
                                            Perusahaan Wajib Diisi
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group" id="SelectJobs">

                                </div>
                                <div class="form-group">
                                    <div class="col mb-3">
                                        <label for="segment1">Upload CV</label>
                                        <input type="file" class="form-control" id="cv_employee" name="cv_employee" placeholder="Date Interview" required>
                                        <div class="invalid-feedback">
                                            Ffile CV Wajib Diisi
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="submit" id="submit" class="btn btn-primary">Tambah</button>
                            </div>
                        </form>
                    </div>
                    <div id="PutCVV">
                        <div class="text-center">
                            <p>Edit Cv</p>
                        </div>
                        <form class="needs-validation-put" novalidate method="PUT" id="PutCV" enctype="multipart/form-data">
                            @Html.AntiForgeryToken()
                            <div class="modal-body">
                                <div class="form-group">
                                    <div class="col mb-3">
                                        <select class="form-control" id="id_cv" name="id_cv" hidden required>
                                        </select>
                                        <select class="form-control" id="id_employee" name="id_employee" hidden required>
                                            <option value="@Context.Session.GetString("Id")"></option>
                                        </select>
                                        <div class="invalid-feedback">
                                            Id Emplooyee Wajib Diisi
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col mb-3">
                                        <label for="id_class">Pilih Perusahaan</label>
                                        <select class="form-control" id="id_company" name="id_company" required>
                                        </select>
                                        <div class="invalid-feedback">
                                            Perusahaan Wajib Diisi
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group" id="SelectJobs">

                                </div>
                                <div class="form-group">
                                    <div class="col mb-3">
                                        <label for="segment1">Upload CV</label>
                                        <input type="file" class="form-control" id="cv_employee" name="cv_employee" placeholder="File CV" required>
                                        <div class="invalid-feedback">
                                            File CV Wajib Diisi
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="submit" id="submit" class="btn btn-primary">Edit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/CV/mycv.js" asp-append-version="true"></script>
}