@*@model PhoneChalin.ViewModels.Login*@
@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "Login";
    Layout = "";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login Management Outsourcing</title>
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="~/lib/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        body {
            font-family: 'Quicksand', sans-serif;
            background-color: #224abe !important;
        }

        .container {
            width: 1000px !important;
        }

        .register {
            padding: 10px 0px 10px 0px;
            border-bottom: 1px solid #dee2e6;
        }
    </style>
</head>
<body>
    <div class="container">
        <main role="main" class="pb-3">
            <div class="row shadow p-3 mb-3 bg-white rounded mt-3">
                <div class="col text-center">
                    <img src="https://www.freshconsultant.co.id/wp-content/uploads/2019/12/outsourcing-fresh.jpg" alt="Smartphone" class="img-login">
                </div>
                <div class="col">
                    <div class="text-center mt-5"> 
                        <img style="width:50% !important;" src="~/images/logo.png" class="img-fluid img-logo-login" />
                    </div>
                    <div class="text-center">
                        <span class="text-danger" id="messageError"></span>
                    </div>
                    <form class="needs-validation" novalidate>
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <label>Username</label>
                            <div class="input-group mb-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-text">
                                        <i class="fas fa-user"></i>
                                    </div>
                                </div>
                                <input type="text" class="form-control" name="username" id="username" placeholder="Username" minlength="5" required>
                                <div class="invalid-feedback" id="errorUsername">
                                    Username tidak boleh kurang dari 5 karakter
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Password</label>
                            <div class="input-group mb-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-text">
                                        <i class="fas fa-key"></i>
                                    </div>
                                </div>
                                <input type="password" class="form-control" name="password" id="password" placeholder="Password" minlength="8" required>
                                <div class="invalid-feedback" id="errorPassword">
                                    Password tidak boleh kurang dari 8 karakter
                                </div>
                            </div>
                        </div>
                        <div class="text-center">
                            <button type="submit" id="submit" class="btn btn-info btn-lg btn-block">Login</button>
                        </div>
                    </form>
                    <p class="text-right mt-2">Lupa <a href="#" data-toggle="modal" data-target="#sendOTP">Password ?</a></p>
                    <p class="text-center mt-3">Tidak punya akun ? <a href="#" data-toggle="modal" data-target="#registerModal">Daftar</a></p>
                    <p class="text-center mt-3">Kembali ke  <a asp-controller="Home" asp-action="Index">menu</a></p>
                </div>
            </div>

            <!-- Modal Register -->
            <div class="modal fade" id="registerModal" tabindex="-1" role="dialog" aria-labelledby="registerModal" aria-hidden="true">
                <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="text-center register">
                            <h5 class="modal-title" id="registerModal">Daftar Akun Management Resourcing Bootcamp</h5>
                        </div>
                        <form class="needs-validation-register" novalidate>
                            @Html.AntiForgeryToken()
                            <div class="modal-body">
                                <div class="form-row">
                                    <div class="col-4 mb-3">
                                        <label for="nipEmployee">NIK</label>
                                        <input type="text" class="form-control" name="nik_employee" id="nik_employee" placeholder="NIK Karyawan" minlength="5" required>
                                        <div class="invalid-feedback">
                                            NIK Karyawan Wajib Diisi
                                        </div>
                                    </div>
                                    <div class="col-4 mb-3">
                                        <label for="nameEmployee">Nama</label>
                                        <input type="text" class="form-control" name="name_employee" id="name_employee" placeholder="Nama Karyawan" minlength="5" required>
                                        <div class="invalid-feedback">
                                            Nama Karyawan Wajib Diisi
                                        </div>
                                    </div>
                                    <div class="col-4 mb-3">
                                        <label for="ageEmployee">Nomer Telfon</label>
                                        <input type="text" class="form-control" name="phone_number" id="phone_number" placeholder="Nomer Telfon" minlength="12" maxlength="12" required>
                                        <div class="invalid-feedback">
                                            Nomer Telfon Wajib Diisi
                                        </div>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="col-4 mb-3">
                                        <label for="ageEmployee">Umur</label>
                                        <input type="text" class="form-control" name="ageEmployee" id="ageEmployee" placeholder="Umur" minlength="1" maxlength="3" required>
                                        <div class="invalid-feedback">
                                            Umur Karyawan Wajib Diisi
                                        </div>
                                    </div>
                                    <div class="col-4 mb-3">
                                        <label for="ageEmployee">Tanggal Lahir</label>
                                        <input type="date" class="form-control" name="datebirth" id="datebirth" placeholder="Tanggal Lahir" required>
                                        <div class="invalid-feedback">
                                            Tanggal Lahir Wajib Diisi
                                        </div>
                                    </div>
                                    <div class="col-4 mb-3">
                                        <label for="genderEmployee">Jenis Klamin</label>
                                        <select class="form-control" name="genderEmployee" id="genderEmployee" required>
                                            <option value="">Pilih Gender</option>
                                            <option value="L">Laki - Laki</option>
                                            <option value="P">Perempuan</option>
                                        </select>
                                        <div class="invalid-feedback">
                                            Jenis Klamin Wajib Diisi
                                        </div>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="col-4 mb-3">
                                        <label for="username">Username Employee</label>
                                        <input type="text" class="form-control" name="username" id="usernames" placeholder="Username" minlength="5" required>
                                        <div class="invalid-feedback">
                                            Username Wajib Diisi
                                        </div>
                                    </div>
                                    <div class="col-4 mb-3">
                                        <label for="email">Email Employee</label>
                                        <input type="email" class="form-control" name="email_employee" id="email_employee" placeholder="Email Employee" required>
                                        <div class="invalid-feedback">
                                            Email Wajib Diisi
                                        </div>
                                    </div>
                                    <div class="col-4 mb-3">
                                        <label for="password">Password</label>
                                        <input type="password" class="form-control" name="password" id="passwords" placeholder="Password" minlength="8" maxlength="12" required>
                                        <div class="invalid-feedback">
                                            Password Wajib Diisi
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Batal</button>
                                <button type="submit" class="btn btn-primary">Daftar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            @* // Send OTP *@
            <div class="modal fade" id="sendOTP" tabindex="-1" role="dialog" aria-labelledby="sendOTP" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="text-center register">
                            <h5 class="modal-title" id="sendOTP">Send OTP</h5>
                        </div>
                        <form action="/Account/SendOTP" method="post" class="needs-validation-sendOTP" novalidate>
                            @Html.AntiForgeryToken()
                            <div class="modal-body">
                                <div class="form-row">
                                    <div class="col mb-3">
                                        <label for="email">Email</label>
                                        <input type="email" class="form-control" name="email" id="emails" placeholder="Email" required>
                                        <div class="invalid-feedback">
                                            Email employee is required
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-primary" id="submitss">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            @* Modal Reset Password *@
            <div class="modal fade" id="resetPassword" tabindex="-1" role="dialog" aria-labelledby="resetPassword" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="text-center register">
                            <h5 class="modal-title" id="resetPassword">Reset Password</h5>
                        </div>
                        <form action="/Account/ResetPassword" method="post" class="needs-validation-resetPassword" novalidate>
                            @Html.AntiForgeryToken()
                            <div class="modal-body">
                                <div class="form-row">
                                    <div class="col mb-3">
                                        <label for="email">Your OTP</label>
                                        <input type="text" class="form-control" name="otp" id="otp" placeholder="Email" required>
                                        <div class="invalid-feedback">
                                            OTP is required
                                        </div>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="col mb-3">
                                        <label for="newpassword">New Password</label>
                                        <input type="text" class="form-control" name="newpassword" id="newpassword" placeholder="New Password" required>
                                        <div class="invalid-feedback">
                                            New password is required
                                        </div>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="col mb-3">
                                        <label for="email">Confirm Password</label>
                                        <input type="text" class="form-control" name="confirmpassword" id="confirmpassword" placeholder="Confirm Password" required>
                                        <div class="invalid-feedback">
                                            Confirm password is required
                                        </div>
                                    </div>
                                </div>
                                <div  id="checkpasswordMatch">
                                
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-primary" id="submitss">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/account/script.js" asp-append-version="true"></script>
</body>
</html>
